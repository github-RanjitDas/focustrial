<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/liveStreamingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/toggleFullScreenLiveView"
        android:layout_width="@dimen/live_view_toggle_full_screen_width"
        android:layout_height="@dimen/live_view_toggle_full_screen_height"
        android:background="@null"
        android:contentDescription="@string/image_description_back_to_normal_size_screen"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_media_fullscreen_shrink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/liveStreamingView" />

    <Button
        android:id="@+id/buttonSnapshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/live_view_main_button_margin_shorter"
        android:background="@drawable/ic_snap_selector"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liveStreamingView" />

    <Button
        android:id="@+id/buttonStreaming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/live_view_main_button_margin_shorter"
        android:background="@drawable/ic_record"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleFullScreenLiveView" />

    <Switch
        android:visibility="gone"
        android:id="@+id/buttonSwitchLiveView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:width="@dimen/live_view_switch_button_width"
        android:height="@dimen/live_view_switch_button_height"
        android:background="@drawable/ic_switch_on"
        android:checked="true"
        android:textOff=""
        android:textOn=""
        android:thumb="@android:color/transparent"
        android:track="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStreaming"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>