<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/liveViewAppBar"
        layout="@layout/live_view_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <SurfaceView
        android:id="@+id/liveStreamingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/toggleFullScreenLiveView"
        android:layout_width="@dimen/live_view_toggle_full_screen_size"
        android:layout_height="@dimen/live_view_toggle_full_screen_size"
        android:background="@color/transparent"
        android:contentDescription="@string/image_description_full_screen_size"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_media_fullscreen_shrink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/liveViewContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_dp"
        app:layout_constraintTop_toBottomOf="@id/liveViewAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/textViewCameraStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/camera_status_margin_horizontal"
            android:layout_marginVertical="@dimen/camera_status_margin_vertical"
            android:text="@string/camera_status"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/battery_margin_top"
            android:background="@drawable/ic_battery"
            android:contentDescription="@string/battery_level"
            app:layout_constraintStart_toStartOf="@id/textViewCameraStatus"
            app:layout_constraintTop_toBottomOf="@id/textViewCameraStatus" />

        <TextView
            android:id="@+id/textViewBatteryPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_percent_placeholder"
            android:textSize="@dimen/battery_percent_text_size"
            app:layout_constraintStart_toStartOf="@id/progressBatteryLevel"
            app:layout_constraintTop_toTopOf="@id/imageViewBattery"
            tools:ignore="SmallSp" />

        <com.safefleet.mobile.safefleet_ui.widgets.linearProgressBar.SafeFleetLinearProgressBar
            android:id="@+id/progressBatteryLevel"
            android:layout_width="@dimen/no_dp"
            android:layout_height="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintStart_toEndOf="@id/imageViewBattery"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            app:layout_constraintBottom_toBottomOf="@id/imageViewBattery" />

        <ImageView
            android:id="@+id/imageViewStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/ic_memory"
            android:contentDescription="@string/memory_level"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintBottom_toBottomOf="@id/imageViewBattery" />

        <TextView
            android:id="@+id/textViewStorageLevels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="@string/storage_level_placeholder"
            android:paddingEnd="3dp"
            tools:ignore="RtlSymmetry,SmallSp"
            app:layout_constraintTop_toTopOf="@id/imageViewBattery"
            app:layout_constraintStart_toStartOf="@id/progressStorageLevel" />

        <com.safefleet.mobile.safefleet_ui.widgets.linearProgressBar.SafeFleetLinearProgressBar
            android:id="@+id/progressStorageLevel"
            android:layout_width="@dimen/no_dp"
            android:layout_height="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintStart_toEndOf="@id/imageViewStorage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imageViewStorage" />

        <View
            android:id="@+id/viewLiveStreamingShadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_view_surface_view_height_default"
            android:layout_marginTop="80dp"
            android:background="@color/whiteTransparentShadow"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/viewLoading"
            android:layout_width="@dimen/loading_dialog_size"
            android:layout_height="@dimen/loading_dialog_size"
            android:visibility="invisible"
            android:layout_marginTop="55dp"
            app:lottie_rawRes="@raw/circular_loading_black"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewLiveStreamingShadow"
            app:layout_constraintBottom_toTopOf="@id/textViewLoading" />

        <TextView
            android:id="@+id/textViewLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taking_snapshot"
            android:layout_marginBottom="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLoading"
            app:layout_constraintBottom_toBottomOf="@id/viewLiveStreamingShadow"
            android:visibility="invisible"
            android:textSize="@dimen/live_view_label_text_size" />

        <TextView
            android:id="@+id/textLiveViewSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/live_view_label"
            android:textAlignment="center"
            android:textSize="@dimen/live_view_label_text_size"
            app:layout_constraintBottom_toBottomOf="@id/buttonSwitchLiveView"
            app:layout_constraintStart_toStartOf="@id/buttonSnapshot"
            app:layout_constraintTop_toTopOf="@id/buttonSwitchLiveView" />

        <com.safefleet.mobile.safefleet_ui.widgets.SafeFleetSwitch
            android:id="@+id/buttonSwitchLiveView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/switch_margin"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@id/dividerSimpleListItem"
            app:layout_constraintStart_toEndOf="@id/textLiveViewSwitch"
            app:layout_constraintTop_toBottomOf="parent" />

        <ImageView
            android:id="@+id/imageRecordingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="@string/image_video_recording"
            android:src="@drawable/ic_recording_circle"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/buttonSwitchLiveView"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@id/buttonSwitchLiveView" />

        <TextView
            android:id="@+id/textLiveViewRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="@dimen/no_dp"
            android:text="@string/recording"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="@dimen/live_view_label_text_size"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/buttonSwitchLiveView"
            app:layout_constraintStart_toEndOf="@id/imageRecordingIndicator"
            app:layout_constraintTop_toTopOf="@id/buttonSwitchLiveView" />

        <ImageView
            android:id="@+id/buttonOpenHelpPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/button_link_snapshots_description"
            android:src="@drawable/ic_info"
            app:layout_constraintBottom_toBottomOf="@id/buttonSwitchLiveView"
            app:layout_constraintEnd_toEndOf="@id/buttonRecord"
            app:layout_constraintTop_toTopOf="@+id/buttonSwitchLiveView" />

        <View
            android:id="@+id/dividerSimpleListItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_view_divider_height"
            android:layout_marginTop="@dimen/live_view_divider_margin_top"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/buttonSwitchLiveView" />

        <com.lawmobile.presentation.widgets.CustomSnapshotButton
            android:id="@+id/buttonSnapshot"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/button_snapshot"
            app:layout_constraintBottom_toTopOf="@id/buttonSnapshotList"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent" />

        <com.lawmobile.presentation.widgets.CustomRecordButton
            android:id="@+id/buttonRecord"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/no_dp"
            android:contentDescription="@string/button_record_description"
            app:layout_constraintBottom_toBottomOf="@id/buttonSnapshot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@id/buttonSnapshot" />

        <View
            android:id="@+id/viewDisableButtons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/no_dp"
            android:background="@color/whiteTransparentShadow"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/buttonSnapshotList"
            app:layout_constraintTop_toBottomOf="@id/dividerSimpleListItem" />

        <Button
            android:id="@+id/buttonSnapshotList"
            android:layout_width="@dimen/no_dp"
            android:layout_height="@dimen/live_view_secondary_button_height"
            android:background="@color/transparent"
            android:contentDescription="@string/snapshot_list_description"
            android:drawableStart="@drawable/ic_view_snapshots"
            android:paddingStart="30dp"
            android:text="@string/view_snapshots"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonVideoList"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/buttonVideoList"
            android:layout_width="@dimen/no_dp"
            android:layout_height="@dimen/live_view_secondary_button_height"
            android:background="@color/transparent"
            android:contentDescription="@string/video_list_description"
            android:drawableStart="@drawable/ic_view_videos"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:text="@string/view_videos"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
