<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fileList.FileListActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:contentDescription="@string/background" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFileList4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFileList0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFileList1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_dp"
        android:background="@color/white"
        android:clickable="false"
        android:contentDescription="@string/white_background"
        app:layout_constraintBottom_toTopOf="@id/guidelineFileList2"
        app:layout_constraintTop_toBottomOf="@id/guidelineFileList0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/buttonSnapshotListSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/snapshot_list_selector"
        android:contentDescription="@string/button_snapshot_list_switch"
        app:layout_constraintEnd_toStartOf="@id/guidelineFileList3"
        app:layout_constraintTop_toTopOf="@id/guidelineFileList4" />

    <ImageButton
        android:id="@+id/buttonVideoListSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/video_list_selector"
        android:contentDescription="@string/button_video_list_switch"
        app:layout_constraintStart_toEndOf="@id/guidelineFileList3"
        app:layout_constraintTop_toTopOf="@id/guidelineFileList4" />

    <CheckBox
        android:id="@+id/fileListCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/file_list_checkbox_margin_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/snapshotListText" />

    <TextView
        android:id="@+id/snapshotListText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/no_dp"
        android:layout_marginBottom="@dimen/file_list_title_bottom"
        android:gravity="center"
        android:paddingTop="@dimen/file_list_title_top"
        android:paddingEnd="@dimen/live_view_text_label_padding_right"
        android:text="@string/snapshots"
        app:layout_constraintBottom_toBottomOf="@id/buttonSnapshotListSwitch"
        app:layout_constraintEnd_toEndOf="@id/buttonSnapshotListSwitch"
        app:layout_constraintStart_toStartOf="@id/buttonSnapshotListSwitch"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/videoListText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/no_dp"
        android:layout_marginBottom="@dimen/file_list_title_bottom"
        android:gravity="center"
        android:paddingStart="@dimen/live_view_text_label_padding_left"
        android:paddingTop="@dimen/file_list_title_top"
        android:text="@string/videos"
        app:layout_constraintBottom_toBottomOf="@id/buttonVideoListSwitch"
        app:layout_constraintEnd_toEndOf="@id/buttonVideoListSwitch"
        app:layout_constraintStart_toStartOf="@id/buttonVideoListSwitch"
        tools:ignore="RtlSymmetry" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFileList3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <FrameLayout
        android:id="@+id/fragmentListHolder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/guidelineFileList2"
        app:layout_constraintTop_toBottomOf="@id/buttonVideoListSwitch" />

    <ImageButton
        android:id="@+id/associatePartnerIdListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_associate_partner_id_off"
        android:contentDescription="@string/associate_partner_to_file_button"
        app:layout_constraintBottom_toBottomOf="@id/guidelineFileList2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineFileList2" />

    <TextView
        android:id="@+id/noFilesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/guidelineFileList2"
        app:layout_constraintTop_toBottomOf="@id/buttonVideoListSwitch" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFileList2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.922293" />

    <TextView
        android:id="@+id/textViewFileListBack"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/file_list_nav_buttons_margin"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="@dimen/file_list_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineFileList2" />

    <TextView
        android:id="@+id/textViewFileListExit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/file_list_nav_buttons_margin"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:textSize="@dimen/file_list_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineFileList2" />

</androidx.constraintlayout.widget.ConstraintLayout>