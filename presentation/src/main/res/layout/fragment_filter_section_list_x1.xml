<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/buttonSelectToAssociate"
        android:layout_width="@dimen/no_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_top_associate_snapshots_button"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:background="@drawable/border_rounded_blue"
        android:drawableStart="@drawable/selector_associate_snapshots"
        android:drawablePadding="@dimen/padding_10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/padding_horizontal_buttons"
        android:text="@string/select_snapshots_to_associate"
        android:textAllCaps="false"
        android:textColor="@color/lightBlue"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewSelectedItems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSelectedItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/margin_20dp"
        app:layout_constraintEnd_toStartOf="@id/buttonOpenFilters"
        app:layout_constraintBottom_toBottomOf="@id/buttonSelectToAssociate"
        app:layout_constraintStart_toEndOf="@id/buttonSelectToAssociate"
        app:layout_constraintTop_toTopOf="@id/buttonSelectToAssociate" />

    <ImageButton
        android:id="@+id/buttonOpenFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:background="@drawable/border_rounded_blue"
        android:contentDescription="@string/associate_partner_id_content_description"
        android:padding="@dimen/padding_15dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSelectToAssociate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonSelectToAssociate" />

    <ScrollView
        android:id="@+id/scrollFilterTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_11dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/buttonSelectToAssociate">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/layoutFilterTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true" />

        </HorizontalScrollView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>