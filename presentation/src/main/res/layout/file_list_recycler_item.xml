<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemFileList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_file_bottom_margin"
    android:background="@drawable/file_list_item_background"
    android:orientation="horizontal"
    android:weightSum="1">

    <CheckBox
        android:id="@+id/checkboxFileListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/check_box_item_file_start"
        android:layout_marginTop="@dimen/file_list_item_margin_vertical"
        android:layout_marginBottom="@dimen/file_list_item_margin_vertical"
        android:layout_weight="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateFileListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/file_list_item_margin_vertical"
        android:layout_marginBottom="@dimen/file_list_item_margin_vertical"
        android:layout_weight="0.3"
        android:text="@string/file_list_date_default" />

    <TextView
        android:id="@+id/durationFileListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/file_list_item_margin_vertical"
        android:layout_marginBottom="@dimen/file_list_item_margin_vertical"
        android:layout_weight="0.3"
        android:text="@string/file_list_duration_default" />

    <TextView
        android:id="@+id/eventFileListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/file_list_item_margin_vertical"
        android:layout_marginBottom="@dimen/file_list_item_margin_vertical"
        android:layout_weight="0.3"
        android:text="@string/file_list_event_default" />

</LinearLayout>