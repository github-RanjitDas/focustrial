<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutStartPairing"
    android:layout_width="match_parent"
    android:background="@drawable/background_blue"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/no_dp"
        android:layout_height="@dimen/no_dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewConnectToCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pairing_phone_camera_button_go_margin_top"
            android:gravity="center"
            android:text="@string/waiting_for_camera"
            android:textColor="@color/white"
            android:textSize="@dimen/text_h3"
            app:layout_constraintBottom_toTopOf="@+id/buttonGo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonGo"
            android:layout_width="@dimen/pairing_phone_camera_button_go_size"
            android:layout_height="@dimen/pairing_phone_camera_button_go_size"
            android:background="@drawable/background_button_go"
            android:text="@string/go"
            android:textColor="@color/white"
            android:textSize="@dimen/button_go_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"/>

        <Button
            android:id="@+id/buttonInstructionsToLinkCamera"
            android:layout_width="@dimen/no_dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/background_button_border_white"
            android:text="@string/instructions_to_link_camera"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/button_instructions_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonChangeCamera"
            tools:ignore="NotSibling" />

        <Button
            android:id="@+id/buttonChangeCamera"
            android:layout_width="@dimen/no_dp"
            android:layout_height="wrap_content"
            android:text="@string/change_camera_type"
            android:textAllCaps="false"
            android:background="@drawable/background_button_border_white"
            android:textColor="@color/white"
            android:textSize="@dimen/button_instructions_text_size"
            android:layout_marginTop="@dimen/button_instructions_margin_top"
            app:layout_constraintTop_toBottomOf="@id/buttonGo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
