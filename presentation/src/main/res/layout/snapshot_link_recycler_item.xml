<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/snapshotItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/snapshot_link_recycler_padding_horizontal"
    android:paddingVertical="@dimen/snapshot_link_recycler_padding_vertical">

    <ImageView
        android:id="@+id/snapshotLinkImageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/snapshot_link_item_height"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHeight_default="wrap"
        android:contentDescription="@string/photo_for_associate_to_video" />

    <TextView
        android:id="@+id/snapshotLinkDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/filename"
        android:textColor="@color/white"
        android:layout_below="@id/snapshotLinkImageView" />

    <TextView
        android:id="@+id/snapshotLinkNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/filename"
        android:textColor="@color/white"
        android:layout_below="@id/snapshotLinkDateText" />

</RelativeLayout>

