<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/appBarContainer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_view_app_bar_height" />

    <FrameLayout
        android:id="@+id/statusBarContainer"
        app:layout_constraintTop_toBottomOf="@id/appBarContainer"
        app:layout_constraintBottom_toBottomOf="@id/guidelineTopStream2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_dp" />

    <FrameLayout
        android:id="@+id/streamContainer"
        app:layout_constraintTop_toBottomOf="@id/statusBarContainer"
        app:layout_constraintBottom_toBottomOf="@id/guidelineMidHorizontalx1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_dp" />

    <FrameLayout
        android:id="@+id/controlsContainer"
        app:layout_constraintTop_toBottomOf="@id/streamContainer"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_dp" />

    <FrameLayout
        android:id="@+id/navigationContainer"
        app:layout_constraintTop_toBottomOf="@id/controlsContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopStream2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.215"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMidHorizontalx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
