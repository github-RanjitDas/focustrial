<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/buttonCustomSnapshot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_live_view_buttons"
            android:contentDescription="@string/button_snapshot"
            android:paddingHorizontal="@dimen/button_custom_snapshot_padding_horizontal"
            android:paddingTop="@dimen/button_custom_snapshot_padding_top"
            android:paddingBottom="@dimen/button_custom_snapshot_padding_bottom"
            android:src="@drawable/ic_snapshot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewButtonSnapshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_custom_snapshot_text_margin_bottom"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/take_snapshots"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>